<Window x:Class="WpfUi.WaveViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfUi"
        mc:Ignorable="d"
        Title="WaveViewer" Height="450" Width="800">

    <Canvas Name="cnvDisplay" Background="black">


        <CheckBox Name="chkWave"     Content="Waveform" IsChecked="true" Canvas.Right="10" Width="70" Canvas.Bottom="30" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <CheckBox Name="chkSpectrum" Content="Spectrum"                  Canvas.Right="10" Width="70" Canvas.Bottom="10" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        

    </Canvas>
</Window>
