<Window x:Class="WpfUi.Prompt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfUi"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Title="Rename" Height="150" Width="290">
    <Canvas>
        <Label x:Name="lblTitle" Canvas.Left="10" Canvas.Top="5" Content="Enter new name:" VerticalAlignment="Top" HorizontalAlignment="Left" />
        <TextBox x:Name="txtName" Canvas.Left="13" Canvas.Top="30" Height="24"  HorizontalAlignment="Left" VerticalAlignment="Top" Width="250"  Text=""/>
        <Button x:Name="btnOK" Content="OK" Canvas.Left="103" Canvas.Top="69" IsDefault="True" Click="OK_Click" Height="24" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" />
        <Button Content="Cancel" Canvas.Left="187" Canvas.Top="69" IsCancel="True" Click="Cancel_Click" Height="24" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" />
    </Canvas>
</Window>
