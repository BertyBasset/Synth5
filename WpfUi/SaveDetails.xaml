<Window x:Class="WpfUi.SaveDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfUi"
        mc:Ignorable="d"
        Title="Save" Height="160" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        >
    <Canvas>
        <TextBlock Canvas.Left="30" Canvas.Top="20">Bank:</TextBlock>
        <ComboBox Name="cboBanks" Canvas.Left="85" Canvas.Top="18" Width="160" Background="#ADD82F"></ComboBox>
        <TextBlock Canvas.Left="30" Canvas.Top="60">Save as:</TextBlock>
        <TextBox Name="txtPatch"  Canvas.Left="85" Canvas.Top="58" Width="160" Height="22"></TextBox>
        <Button Name="btnSave" Canvas.Left="280" Canvas.Top="18" Width="80" Height="22">Save</Button>
        <Button Name="btnCancel" Canvas.Left="280" Canvas.Top="48" Width="80" Height="22">Cancel</Button>
        
    </Canvas>
</Window>
